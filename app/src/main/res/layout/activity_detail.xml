<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="premium"
            android:id="@+id/txtLangganan"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Detail"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />


        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/imageBuku1"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUDUL"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageBuku1"
            android:id="@+id/txtJudul"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TANGGAL RILIS"
            android:textSize="20sp"
            android:textColor="#0DB3CF"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_below="@id/txtJudul"
            android:id="@+id/txtTanggal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENULIS"
            android:textSize="20sp"
            android:textColor="#F4B514"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_below="@id/txtTanggal"
            android:id="@+id/txtPenulis"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PENERBIT"
            android:textSize="20sp"
            android:textColor="#14C7F4"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_below="@id/txtPenulis"
            android:id="@+id/txtPenerbit"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinopsis"
            android:textSize="16sp"
            android:textColor="#3FBC54"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_below="@id/txtPenerbit"
            android:id="@+id/txtSinopsis"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PINJAM"
            android:id="@+id/btnPinjam"
            android:layout_below="@id/txtSinopsis"/>

    </RelativeLayout>








</ScrollView>